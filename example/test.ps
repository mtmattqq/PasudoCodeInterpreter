Algorithm max(x, y):
    if x > y then x else y
Algorithm min(x, y):
    if x < y then x else y
Algorithm abs(a):
    if a >= 0 then a else -a

t <- int(read())

for it <- 1 to t do
    n <- int(read())
    a <- for i <- 1 to n do 0
    dp <- for i <- 1 to n do 0    
    for i <- 1 to n do
        a[i] <- int(read())
    dp[1] <- 0
    dp[2] <- abs(a[1] - a[2])
    for i <- 3 to n do
        dp[i] <- min(dp[i - 1] + abs(a[i] - a[i - 1]), dp[i - 2] + abs(a[i] - a[i - 2]))
    print(dp[n])